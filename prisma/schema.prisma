generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Query {
  id      String   @unique @default(uuid())
  name    String
  number  String   @unique
  email   String   @unique
  inquiry String[] @default([])
  type    Inquiry[] @default([])
}


enum Inquiry {
  CONSULTATION
  DESIGN
  MAINTANENCE
  INSTALLATION
  OTHER
}
